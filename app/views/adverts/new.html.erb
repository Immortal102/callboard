<h1>Adverts#new</h1>
<%=form_for @advert  do |f|%>
	<%= f.error_messages %>
	<%=f.label :title%><br>
	<%=f.text_field :title%><br>
	<%=f.label :email%><br>
	<%=f.text_field :email%><br>
	<%=f.label :city%><br>
	<%=f.text_field :city%><br>
	<%=f.label :address%><br>
	<%=f.text_field :address%><br>
	<%=f.label :description%><br>
	<%=f.text_field :description%><br>
	<%=f.label :category%><br>
	<%=f.collection_select(:category_id, @categories, :id, :title)%><br>
	<%=f.submit "Create"%>
<%end%>
